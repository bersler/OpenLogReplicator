{
  "version": "1.8.6",
  "source": [
    {
      "alias": "S1",
      "name": "O112A",
      "reader": {
        "type": "offline",
        "path-mapping": ["/db/fra", "/opt/fast-recovery-area"]
      },
      "format": {
        "type": "json"
      },
      "memory": {
        "min-mb": 64,
        "max-mb": 1024
      },
      "filter": {
        "table": [
          {"owner": "OWNER1", "table": "TABLENAME1", "key": "COL1,COL2,COL3"},
          {"owner": "OWNER1", "table": "TABLENAME2"},
          {"owner": "OWNER2", "table": "TAB.*"}
        ]
      }
    }
  ],
  "target": [
    {
      "alias": "K1",
      "source": "S1",
      "writer": {
        "type": "kafka",
        "topic": "O112A",
        "brokers": "localhost:9092"
      }
    }
  ]
}
